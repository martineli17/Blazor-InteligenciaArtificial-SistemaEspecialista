    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="projeto" Match="NavLinkMatch.All" @onclick="ToggleNavMenuProjeto">
                <span class="oi oi-book" aria-hidden="true"></span> Projetos
            </NavLink>
            @*<ul class="nav flex-column" hidden="@NavSubMenuProjeto">
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="escola/curso" Match="NavLinkMatch.All">
                        <span class="oi oi-chevron-right"></span> Criar
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="escola/disciplina" Match="NavLinkMatch.All">
                        <span class="oi oi-chevron-right"></span> Selecionar Projeto
                    </NavLink>
                </li>
            </ul>*@
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool collapseNavSubMenuProjeto = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private string NavSubMenuProjeto => collapseNavSubMenuProjeto ? "hidden" : null;

    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;

    private void ToggleNavMenuProjeto() => collapseNavSubMenuProjeto = !collapseNavSubMenuProjeto;

}